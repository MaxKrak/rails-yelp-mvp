<% @restaurants.each do |restaurant| %>
    <h2><%= restaurant.name %></h2>
      <p><%= restaurant.address %></p>
      <p><%= restaurant.category %></p>
      <p><%= restaurant.phone_number %></p>
    <%= link_to "Know more about #{restaurant.name}", restaurant_path(restaurant), class: "btn btn-primary" %>
<% end %>
<div>
  <%= link_to "Create a New Restaurant", new_restaurant_path, class: "btn btn-danger" %>
</div>
